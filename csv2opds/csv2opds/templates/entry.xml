<?python
import datetime
updated = datetime.datetime.utcnow()
?>
<entry xmlns="http://www.w3.org/2005/Atom" py:def="entry(e)">
  <title>${e.title}</title>
  <updated>${updated.isoformat()}</updated>
  <id>${e.urn}</id>
  <py:for each="a in e.authors">
    <author>
      <name>${a}</name>
    </author>  
  </py:for>
  <content type="text">${e.content}</content>
</entry>
