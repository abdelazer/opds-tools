<?python
import datetime
from csv2opds import CATALOG_TYPE
updated = datetime.datetime.utcnow()
?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <title>${title}</title>
  <updated>${updated.isoformat()}</updated>
  <id>${atom_id}</id>
  <author>
    <name>${feed_author}</name>
  </author>  
  <link rel="http://opds-spec.org/crawlable" 
        href="${crawlable}"
        type="${CATALOG_TYPE}"/>
  <link rel="start" 
        href="${root}"
        type="${CATALOG_TYPE}"/>

</feed>
