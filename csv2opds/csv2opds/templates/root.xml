<?python
import datetime
updated = datetime.datetime.utcnow()
?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <title>OPDS Catalog</title>
  <updated>${updated.isoformat()}</updated>
  <id>${atom_id}</id>
  <author>
    <name>${feed_author}</name>
  </author>  
  <link rel="http://opds-spec.org/crawlable" 
        href="${crawlable}"
        type="application/atom+xml;type=feed;profile=http://opds-spec.org/2010/catalog"/>
  <link rel="start" 
        href="${root}"
        type="application/atom+xml;type=feed;profile=http://opds-spec.org/2010/catalog"/>

</feed>
